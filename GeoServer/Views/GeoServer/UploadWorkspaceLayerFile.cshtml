
@{
    ViewData["Title"] = "UploadWorkspaceLayerFile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>UploadWorkspaceLayerFile</h2>

<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("UploadWorkspaceLayerFile", "GeoServer", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Workspace</label>
                <select class="form-control" name="WorkspaceName" asp-items="ViewBag.Workspaces"></select>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">Files</label>
                <input type="file" name="Files" multiple />
            </div>
            <div class="form-group">
                <input type="submit" value="Upload" class="btn btn-default" />
            </div>
        }
    </div>
</div>