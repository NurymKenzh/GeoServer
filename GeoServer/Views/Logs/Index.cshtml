@model IEnumerable<GeoServer.Models.Log>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<p>
    <a asp-action="Create">Create New</a>
</p>*@
<div class="container-fluid">
    <div class="row">
        <div class="col-md-10 offset-md-1 mt-3">
            <div class="alert alert-secondary" role="alert">
                <button type="button" class="close" data-dismiss="alert">x</button> <h4 class="alert-heading">Журнал</h4>
                <hr />
                <div class="d-flex bd-highlight">
                    <div class="flex-grow-1 bd-highlight">
                        <p class="text-info">Функция предназначен для работы с данными</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-10 offset-md-1 mt-3">
            <div class="table-responsive-lg">
                <table class="table table-striped table-bordered table-sm">
                    <thead>
                        <tr class="table-primary">
                            <th scope="col">
                                <div class="form-row align-items-center">
                                    <div class="col-sm-2 my-1">
                                        @Html.DisplayNameFor(model => model.Email)
                                    </div>
                                </div>
                            </th>
                            <th scope="col">
                                <div class="form-row align-items-center">
                                    <div class="col-sm-2 my-1">
                                        @Html.DisplayNameFor(model => model.DateTime)
                                    </div>
                                </div>
                            </th>
                            <th scope="col">
                                <div class="form-row align-items-center">
                                    <div class="col-auto my-2">
                                        @Html.DisplayNameFor(model => model.Function)
                                    </div>
                                </div>
                            </th>
                            <th scope="col">
                                <div class="form-row align-items-center">
                                    <div class="col-auto my-1">
                                        @Html.DisplayNameFor(model => model.Operation)
                                    </div>
                                </div>

                            </th>
                            <th scope="col">
                                <div class="form-row align-items-center">
                                    <div class="col-auto my-1">
                                        @Html.DisplayNameFor(model => model.Parameters)
                                    </div>
                                </div>
                            </th>
                            <th scope="col">
                                <div class="form-row align-items-center">
                                    <div class="col-sm-4 my-1">
                                        Red
                                    </div>
                                </div>
                            </th>

                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@Html.DisplayFor(modelItem => item.Email)</th>
                            <td> @Html.DisplayFor(modelItem => item.DateTime)</td>
                            <td>@Html.DisplayFor(modelItem => item.Function)</td>
                            <td> @Html.DisplayFor(modelItem => item.Operation)</td>
                            <td> @Html.DisplayFor(modelItem => item.Parameters)</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-eye"></i></a> |
                                <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-pencil-square-o"></i></a> |
                                <a asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>



