
@{
    ViewData["Title"] = "ModisAnomaly";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*<script src="~/lib/jquery/dist/jquery.js"></script>*@

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 offset-md-2 mt-3">
            <div class="alert alert-primary" role="alert">
                <button type="button" class="close" data-dismiss="alert">x</button> <h4 class="alert-heading">Расчет статистики аномальных значении</h4>
                <hr />
                <div class="d-flex bd-highlight">
                    <div class="flex-grow-1 bd-highlight">
                        <p class="text-info">
                            Функция перепроецирует растр в другую поддерживаемую проекцию. Есть возможность пакетной обработки
                        </p>
                    </div>
                    <!-- Button trigger modal -->
                    <div class="bd-highlight">
                        <button type="button" class="btn btn-link" data-toggle="modal" data-target=".bd-example-modal-lg"><i class="fa fa-exclamation-triangle"></i></button>
                    </div>
                </div>
                @if (!string.IsNullOrEmpty(ViewBag.Message))
                {
                    <h4>@ViewBag.Message</h4>
                }
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 offset-md-2 mt-3">
            <form asp-action="ModisAnomaly">
                <div class="form-group">
                    <label class="control-label">Год</label>
                    @Html.DropDownList("Year", Enumerable.Range(2018, 1).Select(i => new SelectListItem { Text = i.ToString(), Value = i.ToString() }), htmlAttributes: new { @class = "form-control is-invalid" })
                </div>
                <div class="form-group">
                    <input type="submit" value="OK" class="btn btn-outline-primary btn-block" />
                </div>
            </form>
        </div>
    </div>
</div>