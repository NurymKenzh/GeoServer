@model IEnumerable<GeoServer.Models.ModisProduct>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 offset-md-2 mt-3">
            <div class="alert alert-secondary" role="alert">
                <button type="button" class="close" data-dismiss="alert">x</button> <h4 class="alert-heading">Продукты MODI:</h4>
                <hr />
                <div class="d-flex bd-highlight">
                    <div class="flex-grow-1 bd-highlight">
                        <p class="text-info">Функция предназначена для загрузки продукта MODIS</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 offset-md-2 ">
            <div class="col pt-0">
                <p>
                    <a class="btn btn-outline-success ml-1" asp-action="Create"><i class="fa fa-pencil"></i> Create New</a>
                </p>
            </div>
            <div class="table-responsive-lg">
                <table class="table table-striped table-bordered table-sm">
                    <thead>
                        <tr class="table-primary">
                            <th scope="col">
                                <div class="form-row align-items-center">
                                    <div class="col-sm-2 my-1">
                                        @Html.DisplayNameFor(model => model.Name)
                                </div>
                            </div>
                        </th>
                        <th scope="col">
                            <div class="form-row align-items-center">
                                <div class="col-sm-2 my-1">
                                    @Html.DisplayNameFor(model => model.Name)
                            </div>
                        </div>
                        </th>
                        <th scope="col">
                            <div class="form-row align-items-center">
                                <div class="col-sm-4 my-1">
                                    Red
                                </div>
                            </div>
                        </th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">  @Html.DisplayFor(modelItem => item.Name)</th>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-eye"></i></a> |
                                <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-pencil-square-o"></i></a> |
                                <a asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.ModisSource)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModisSource.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
